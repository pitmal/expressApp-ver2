extends layout

block content
  h1= title
  p Welcome to #{title}
  form(method="get")
    input(type="text" name="search" value=query||"" )
    input(type="submit" value="Szukaj")
  if dataNews !== undefined
    each news in dataNews
      p(class="title") Tytuł :
        span #{news.title}
      p(class="description") Treść :
        span #{news.description}
      
